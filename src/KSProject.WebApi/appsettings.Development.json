{
  "ConnectionStrings": {
    "Default": "Server=localhost,1433;Initial Catalog=KSProjectDb2;User ID=sa;Password=123;TrustServerCertificate=true",
    "Master": "Server=localhost,1433;Initial Catalog=Master;User ID=sa;Password=123;TrustServerCertificate=true"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-development-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "TarnamaGostr",
      "Environment": "Development"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "PublicSettings": {
    "PublicOptions": {
      "EmailActivation": true,
      "PhoneActivation": true,
      "BaseUrl": "http://localhost:5001",
      "CdnBaseAddress": "http://localhost:6001/filemanager"
    },
    "JwtOptions": {
      "SecretKey": "this is my custom Secret key for authentication",
      "Issuer": "KSProject.ir",
      "Audience": "KSProject.ir",
      "NotBeforeInMinutes": "0",
      "ExpirationInMinutes": "60",
      "BaseUrl": "http://localhost:5001"
    },
    "CustomIdentityOptions": {
      "PasswordOptions": {
        "RequireDigit": false,
        "RequiredLength": 4,
        "RequireNonAlphanumeric": false,
        "RequireUppercase": false,
        "RequireLowercase": false,
        "RequiredUniqueChars": 0
      },
      "SigninOptions": {
        "RequireConfirmedAccount": false,
        "RequireConfirmedEmail": false,
        "RequireConfirmedPhoneNumber": false
      },
      "LockoutOptions": {
        "AllowedForNewUsers": false,
        "DefaultLockoutMinutes": 20,
        "MaxFailedAccessAttempts": 5
      },
      "UserOptions": {
        "RequireUniqueEmail": false,
        "AllowedUserNameCharacters": "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
      }
    }
  }
}
